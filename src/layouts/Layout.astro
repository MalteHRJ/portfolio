---
import ViewTransitions from 'astro/components/ViewTransitions.astro';
interface Props {
   title: string;
}

const { title } = Astro.props;
import Header from './Header.astro';
import '../globals.css';
import { slide } from 'astro:transitions';
---

<!doctype html>
<html lang='en'>
   <head>
      <meta charset='UTF-8' />
      <meta
         name='description'
         content='Astro description'
      />
      <meta
         name='viewport'
         content='width=device-width'
      />
      <link
         rel='icon'
         type='image/svg+xml'
         href='/favicon.svg'
      />
      <meta
         name='generator'
         content={Astro.generator}
      />
      <title>{title}</title>
      <ViewTransitions />
   </head>
   <body
      class='h-screen bg-light text-dark dark:bg-dark dark:text-light '>
      <Header />
      <main transition:animate={slide({ duration: '0.35s' })} class="grid place-items-center"><section class="w-full max-w-screen-xl p-4"><slot /></section></main>

   </body>
   <style >
      body{
         scrollbar-width: 0;
      }

      body::-webkit-scrollbar {
         display: none;
      }
   </style>
</html>
